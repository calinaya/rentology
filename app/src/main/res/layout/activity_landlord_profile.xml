<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".landlord_profile"
    android:background="@drawable/background_gradient">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:src="@drawable/arrow_back"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:tint="@color/white"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Back Button"/>

    <TextView
        android:id="@+id/profileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Landlord Profile"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:shadowColor="#FF0000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="8"
        android:fontFamily="sans-serif-condensed" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileTitle"
        android:padding="25dp"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="18dp"
        android:clipToOutline="true">



        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/profile"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:elevation="20dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="18sp"
            android:textColor="#FF3C3C"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:gravity="center"/>


        <EditText
            android:id="@+id/profileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jericho"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/edittext_glow"
            android:gravity="center"
            android:padding="15dp"
            android:focusable="false"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="18sp"
            android:textColor="#FF3C3C"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:gravity="center"/>


        <EditText
            android:id="@+id/profileEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="jericho@example.com"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/edittext_glow"
            android:gravity="center"
            android:padding="15dp"
            android:focusable="false"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="18sp"
            android:textColor="#FF3C3C"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:gravity="center"/>


        <EditText
            android:id="@+id/profilePhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+123 456 7890"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/edittext_glow"
            android:gravity="center"
            android:padding="15dp"
            android:focusable="false"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="18sp"
            android:textColor="#FF3C3C"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:gravity="center"/>


        <EditText
            android:id="@+id/profileAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="123 Cyber Street, Future City"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/edittext_glow"
            android:gravity="center"
            android:padding="15dp"
            android:focusable="false"/>

    </LinearLayout>

</RelativeLayout>