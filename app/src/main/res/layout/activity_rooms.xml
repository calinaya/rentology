<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rooms"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp">

        <ImageView
            android:id="@+id/headerImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/g"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"/>

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:contentDescription="Back Button"
            android:src="@drawable/arrow_back"
            android:tint="@color/white"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RENTOLOGY"
            android:textSize="50dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ROOMS:"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="230dp"/>

        <Button
            android:id="@+id/AddRooms"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Add Rooms"
            android:backgroundTint="#F44336"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="230dp"
            android:fontFamily="sans-serif-black"
            android:textSize="14dp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="280dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_card"
                android:padding="18dp"
                android:layout_marginBottom="18dp"
                android:elevation="12dp">

                <ImageView
                    android:id="@+id/itemImage1"
                    android:layout_width="160dp"
                    android:layout_height="110dp"
                    android:src="@drawable/bh1"
                    android:scaleType="centerCrop"
                    android:elevation="8dp"
                    android:layout_alignParentStart="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/itemImage1"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/itemTitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Room 1"
                        android:textColor="#FF4444"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:shadowColor="#FF0000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="6"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:id="@+id/itemDescription1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A comfortable and stylish room with modern amenities."
                        android:textColor="#DDDDDD"
                        android:textSize="16sp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="sans-serif-light"
                        android:shadowColor="#555555"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="3"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_card"
                android:padding="18dp"
                android:layout_marginBottom="18dp"
                android:elevation="12dp">

                <ImageView
                    android:id="@+id/itemImage2"
                    android:layout_width="160dp"
                    android:layout_height="110dp"
                    android:src="@drawable/bh2"
                    android:scaleType="centerCrop"
                    android:elevation="8dp"
                    android:layout_alignParentStart="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/itemImage2"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/itemTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Room 2"
                        android:textColor="#FF4444"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"/>

                    <TextView
                        android:id="@+id/itemDescription2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spacious room with great ventilation and cozy interiors."
                        android:textColor="#DDDDDD"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-light"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_card"
                android:padding="18dp"
                android:layout_marginBottom="18dp"
                android:elevation="12dp">

                <ImageView
                    android:id="@+id/itemImage3"
                    android:layout_width="160dp"
                    android:layout_height="110dp"
                    android:src="@drawable/bh3"
                    android:scaleType="centerCrop"
                    android:elevation="8dp"
                    android:layout_alignParentStart="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/itemImage3"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/itemTitle3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Room 3"
                        android:textColor="#FF4444"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"/>

                    <TextView
                        android:id="@+id/itemDescription3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spacious room with great ventilation and cozy interiors."
                        android:textColor="#DDDDDD"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-light"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_card"
                android:padding="18dp"
                android:layout_marginBottom="18dp"
                android:elevation="12dp">

                <ImageView
                    android:id="@+id/itemImage4"
                    android:layout_width="160dp"
                    android:layout_height="110dp"
                    android:src="@drawable/bh4"
                    android:scaleType="centerCrop"
                    android:elevation="8dp"
                    android:layout_alignParentStart="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/itemImage4"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/itemTitle4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Room 4"
                        android:textColor="#FF4444"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"/>

                    <TextView
                        android:id="@+id/itemDescription4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spacious room with great ventilation and cozy interiors."
                        android:textColor="#DDDDDD"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-light"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>


